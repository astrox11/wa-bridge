---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="wa-runtime Web Dashboard" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | wa-runtime</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #25D366;
    --color-primary-dark: #1da851;
    --color-bg: #0b141a;
    --color-bg-secondary: #111b21;
    --color-bg-tertiary: #202c33;
    --color-text: #e9edef;
    --color-text-secondary: #8696a0;
    --color-border: #2a3942;
    --color-danger: #ea4335;
    --color-warning: #f9a825;
    --color-success: #25D366;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    min-height: 100vh;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  button {
    cursor: pointer;
    font-family: inherit;
  }

  input, button {
    font-size: 1rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>
