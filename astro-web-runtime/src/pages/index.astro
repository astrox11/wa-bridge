---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Session Setup">
  <main class="max-w-lg mx-auto px-4 py-8">
    <div class="bg-gh-bg border border-gh-border rounded-gh">
      <div class="p-4 border-b border-gh-border">
        <h1 class="text-lg font-semibold text-gh-text">Create Session</h1>
        <p class="text-sm text-gh-text-secondary mt-1">Create a new WhatsApp session</p>
      </div>

      <form id="session-form" class="p-4 space-y-4">
        <div>
          <label for="phone" class="block text-sm font-medium text-gh-text mb-1">
            Phone Number
          </label>
          <input 
            type="tel" 
            id="phone" 
            name="phoneNumber" 
            placeholder="14155551234" 
            required
            pattern="[0-9]+"
            class="w-full px-3 py-1.5 text-sm bg-gh-bg border border-gh-border rounded-gh text-gh-text placeholder-gh-text-muted focus:outline-none focus:border-gh-accent focus:ring-1 focus:ring-gh-accent"
          />
          <p class="text-xs text-gh-text-muted mt-1">Include country code without + symbol</p>
        </div>

        <div>
          <label for="botName" class="block text-sm font-medium text-gh-text mb-1">
            Bot Name <span class="text-gh-text-muted font-normal">(optional)</span>
          </label>
          <input 
            type="text" 
            id="botName" 
            name="botName" 
            placeholder="My Bot"
            class="w-full px-3 py-1.5 text-sm bg-gh-bg border border-gh-border rounded-gh text-gh-text placeholder-gh-text-muted focus:outline-none focus:border-gh-accent focus:ring-1 focus:ring-gh-accent"
          />
        </div>

        <div>
          <label for="version" class="block text-sm font-medium text-gh-text mb-1">
            Version
          </label>
          <input 
            type="text" 
            id="version" 
            name="version" 
            readonly
            disabled
            class="w-full px-3 py-1.5 text-sm bg-gh-bg-secondary border border-gh-border rounded-gh text-gh-text-secondary cursor-not-allowed"
          />
        </div>

        <button 
          type="submit" 
          class="w-full py-1.5 px-4 text-sm font-medium rounded-gh bg-gh-success text-white hover:bg-green-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Create Session
        </button>
      </form>

      <div id="error-message" class="mx-4 mb-4 p-3 rounded-gh bg-gh-danger-subtle border border-gh-danger text-gh-danger text-sm hidden"></div>
    </div>

    <div class="mt-6 bg-gh-bg border border-gh-border rounded-gh">
      <div class="p-4 border-b border-gh-border">
        <h2 class="text-sm font-semibold text-gh-text">Existing Sessions</h2>
      </div>
      <div id="sessions-list" class="divide-y divide-gh-border">
        <div class="p-8 flex justify-center">
          <div class="w-5 h-5 border-2 border-gh-accent border-t-transparent rounded-full animate-spin"></div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { api } from '../lib/api';

  const form = document.getElementById('session-form') as HTMLFormElement;
  const errorDiv = document.getElementById('error-message') as HTMLDivElement;
  const sessionsList = document.getElementById('sessions-list') as HTMLDivElement;
  const versionInput = document.getElementById('version') as HTMLInputElement;

  let ws: WebSocket | null = null;

  async function init() {
    const configResult = await api.getConfig();
    if (configResult.success && configResult.data) {
      versionInput.value = configResult.data.version;
    }
    await loadSessions();
    
    // Connect to WebSocket for real-time updates
    connectWebSocket();
  }

  function connectWebSocket() {
    ws = api.connectStats((data) => {
      if (data.type === 'stats' && data.data.sessions) {
        renderSessions(data.data.sessions.map(s => ({
          id: s.id,
          phone_number: s.phone_number,
          created_at: s.created_at,
          status: s.status,
          pushName: s.pushName,
        })));
      }
    });
    
    if (ws) {
      ws.onclose = () => {
        // Reconnect after 3 seconds
        setTimeout(connectWebSocket, 3000);
      };
    }
  }

  async function deleteSession(id: string) {
    if (!confirm('Delete this session?')) return;
    
    const result = await api.deleteSession(id);
    if (result.success) {
      await loadSessions();
    } else {
      alert(result.error || 'Failed to delete session');
    }
  }

  function renderSessions(sessions: Array<{id: string; phone_number: string; created_at: number; status: string; pushName?: string}>) {
    if (sessions.length === 0) {
      sessionsList.innerHTML = `
        <div class="p-6 text-center">
          <p class="text-sm text-gh-text-muted">No sessions yet</p>
        </div>
      `;
      return;
    }

    sessionsList.innerHTML = sessions.map(session => {
      // Use pushName if available, otherwise show phone number
      const displayName = session.pushName || `+${session.phone_number}`;
      
      // Status icon - green checkmark for active (GitHub style)
      const statusIcon = session.status === 'active' 
        ? `<svg class="w-4 h-4 text-gh-success" viewBox="0 0 16 16" fill="currentColor">
            <path d="M13.78 4.22a.75.75 0 0 1 0 1.06l-7.25 7.25a.75.75 0 0 1-1.06 0L2.22 9.28a.75.75 0 0 1 1.06-1.06L6 10.94l6.72-6.72a.75.75 0 0 1 1.06 0Z"/>
          </svg>`
        : session.status === 'pairing'
        ? `<svg class="w-4 h-4 text-gh-warning" viewBox="0 0 16 16" fill="currentColor">
            <path d="M6.457 1.047c.659-1.234 2.427-1.234 3.086 0l6.082 11.378A1.75 1.75 0 0 1 14.082 15H1.918a1.75 1.75 0 0 1-1.543-2.575Zm1.763.707a.25.25 0 0 0-.44 0L1.698 13.132a.25.25 0 0 0 .22.368h12.164a.25.25 0 0 0 .22-.368Zm.53 3.996v2.5a.75.75 0 0 1-1.5 0v-2.5a.75.75 0 0 1 1.5 0ZM9 11a1 1 0 1 1-2 0 1 1 0 0 1 2 0Z"/>
          </svg>`
        : `<svg class="w-4 h-4 text-gh-text-muted" viewBox="0 0 16 16" fill="currentColor">
            <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0ZM1.5 8a6.5 6.5 0 1 0 13 0 6.5 6.5 0 0 0-13 0Zm9.78-2.22-5.5 5.5a.749.749 0 0 1-1.275-.326.749.749 0 0 1 .215-.734l5.5-5.5a.751.751 0 0 1 1.042.018.751.751 0 0 1 .018 1.042Z"/>
          </svg>`;
      
      return `
        <div class="flex items-center justify-between p-3 hover:bg-gh-bg-secondary transition-colors" data-id="${session.id}">
          <div class="flex items-center gap-3">
            ${statusIcon}
            <span class="text-sm font-medium text-gh-text">${displayName}</span>
          </div>
          <div class="flex items-center gap-1">
            ${session.status === 'active' ? `
              <a href="/dashboard/${session.id}" class="p-1.5 text-gh-text-secondary hover:text-gh-accent hover:bg-gh-bg-tertiary rounded-gh transition-colors" title="Dashboard">
                <svg class="w-4 h-4" viewBox="0 0 16 16" fill="currentColor">
                  <path d="M0 1.75A.75.75 0 0 1 .75 1h4.253c1.227 0 2.317.59 3 1.501A3.743 3.743 0 0 1 11.006 1h4.245a.75.75 0 0 1 .75.75v10.5a.75.75 0 0 1-.75.75h-4.507a2.25 2.25 0 0 0-1.591.659l-.622.621a.75.75 0 0 1-1.06 0l-.622-.621A2.25 2.25 0 0 0 5.258 13H.75a.75.75 0 0 1-.75-.75Zm7.251 10.324.004-5.073-.002-2.253A2.25 2.25 0 0 0 5.003 2.5H1.5v9h3.757a3.75 3.75 0 0 1 1.994.574ZM8.755 4.75l-.004 7.322a3.752 3.752 0 0 1 1.992-.572H14.5v-9h-3.495a2.25 2.25 0 0 0-2.25 2.25Z"/>
                </svg>
              </a>
            ` : session.status === 'pairing' ? `
              <a href="/pairing/${session.id}" class="p-1.5 text-gh-text-secondary hover:text-gh-success hover:bg-gh-bg-tertiary rounded-gh transition-colors" title="Continue Pairing">
                <svg class="w-4 h-4" viewBox="0 0 16 16" fill="currentColor">
                  <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0ZM1.5 8a6.5 6.5 0 1 0 13 0 6.5 6.5 0 0 0-13 0Zm4.879-2.773 4.264 2.559a.25.25 0 0 1 0 .428l-4.264 2.559A.25.25 0 0 1 6 10.559V5.442a.25.25 0 0 1 .379-.215Z"/>
                </svg>
              </a>
            ` : ''}
            <button class="p-1.5 text-gh-text-secondary hover:text-gh-danger hover:bg-gh-danger-subtle rounded-gh transition-colors" data-delete-session="${session.id}" title="Delete">
              <svg class="w-4 h-4" viewBox="0 0 16 16" fill="currentColor">
                <path d="M11 1.75V3h2.25a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1 0-1.5H5V1.75C5 .784 5.784 0 6.75 0h2.5C10.216 0 11 .784 11 1.75ZM4.496 6.675l.66 6.6a.25.25 0 0 0 .249.225h5.19a.25.25 0 0 0 .249-.225l.66-6.6a.75.75 0 0 1 1.492.149l-.66 6.6A1.748 1.748 0 0 1 10.595 15h-5.19a1.75 1.75 0 0 1-1.741-1.575l-.66-6.6a.75.75 0 1 1 1.492-.15ZM6.5 1.75V3h3V1.75a.25.25 0 0 0-.25-.25h-2.5a.25.25 0 0 0-.25.25Z"/>
              </svg>
            </button>
          </div>
        </div>
      `;
    }).join('');

    sessionsList.querySelectorAll('[data-delete-session]').forEach(button => {
      button.addEventListener('click', (e) => {
        const target = e.currentTarget as HTMLElement;
        const sessionId = target.getAttribute('data-delete-session');
        if (sessionId) {
          deleteSession(sessionId);
        }
      });
    });
  }

  async function loadSessions() {
    const result = await api.getSessions();
    
    if (result.success && result.data) {
      renderSessions(result.data);
    } else {
      sessionsList.innerHTML = `
        <div class="p-6 text-center">
          <p class="text-sm text-gh-danger">Failed to load sessions</p>
        </div>
      `;
    }
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const phoneInput = document.getElementById('phone') as HTMLInputElement;
    const phoneNumber = phoneInput.value.replace(/\D/g, '');
    
    if (!phoneNumber) {
      showError('Please enter a valid phone number');
      return;
    }

    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    submitBtn.disabled = true;
    submitBtn.textContent = 'Creating...';
    hideError();

    const result = await api.createSession(phoneNumber);

    if (result.success && result.data) {
      window.location.href = `/pairing/${result.data.id}?code=${result.data.pairingCode}`;
    } else {
      showError(result.error || 'Failed to create session');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Create Session';
    }
  });

  function showError(message: string) {
    errorDiv.textContent = message;
    errorDiv.classList.remove('hidden');
  }

  function hideError() {
    errorDiv.classList.add('hidden');
  }

  init();
</script>
